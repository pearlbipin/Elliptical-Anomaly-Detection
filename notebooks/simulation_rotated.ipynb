import sys
import os
import numpy as np
import matplotlib.pyplot as plt
from sklearn.metrics import confusion_matrix, accuracy_score, precision_score, recall_score, f1_score, ConfusionMatrixDisplay

sys.path.append(os.path.abspath(os.path.join('..')))
from src.elliptical import EllipticalAnomalyDetector

# Generate base ellipse data again
x_center, y_center = 0, 0
a, b = 5, 2  # Flatter ellipse to make rotation obvious
num_normal = 1000
num_anom = 40

# Normal
angles = np.random.uniform(0, 2 * np.pi, num_normal)
radii = np.sqrt(np.random.uniform(0, 1, num_normal))
x_norm = a * radii * np.cos(angles)
y_norm = b * radii * np.sin(angles)
X_normal_base = np.column_stack((x_norm, y_norm))

# Anomalies
anom_angles = np.random.uniform(0, 2 * np.pi, num_anom)
anom_radii = np.random.uniform(1.2, 2.5, num_anom)
x_anom = a * anom_radii * np.cos(anom_angles)
y_anom = b * anom_radii * np.sin(anom_angles)
X_anom_base = np.column_stack((x_anom, y_anom))

# Apply Rotation (e.g., 45 degrees or pi/4)
theta = np.pi / 4
rotation_matrix = np.array([
    [np.cos(theta), -np.sin(theta)],
    [np.sin(theta),  np.cos(theta)]
])

# Rotate points
X_normal_rot = X_normal_base @ rotation_matrix.T
X_anom_rot = X_anom_base @ rotation_matrix.T

# Combine
X_rot = np.vstack((X_normal_rot, X_anom_rot))
y_true = np.array([0]*num_normal + [1]*num_anom)

print(f"Rotated Data Generated: {len(X_rot)} points")

# Initialize Rotated Algorithm [cite: 222]
model = EllipticalAnomalyDetector(mode='rotated')

# Fit
model.fit(X_rot)

# Predict
y_pred = model.predict(X_rot)

plt.figure(figsize=(10, 8))

# Plot Results
plt.scatter(X_rot[y_pred==0, 0], X_rot[y_pred==0, 1], c='blue', s=20, label='Predicted Normal')
plt.scatter(X_rot[y_pred==1, 0], X_rot[y_pred==1, 1], c='red', s=40, label='Detected Anomalies')

# Visualize the detected Major Axis for verification
center = model.center
p1 = model.extreme_points['PL']
p2 = model.extreme_points['PR']
plt.plot([p1[0], p2[0]], [p1[1], p2[1]], 'g-', linewidth=2, label='Detected Major Axis')

plt.title("Anomaly Detection Algorithm (Rotated Clusters)")
plt.xlabel("X-axis")
plt.ylabel("Y-axis")
plt.legend()
plt.grid(True)
plt.axis('equal')
plt.show()

# Metrics
cm = confusion_matrix(y_true, y_pred)
acc = accuracy_score(y_true, y_pred)
f1 = f1_score(y_true, y_pred)

print(f"Accuracy:  {acc:.4f}")
print(f"F1 Score:  {f1:.4f}")

# Plot Matrix
disp = ConfusionMatrixDisplay(confusion_matrix=cm, display_labels=['Normal', 'Anomaly'])
disp.plot(cmap='Blues')
plt.title("Confusion Matrix (Rotated)")
plt.show()
