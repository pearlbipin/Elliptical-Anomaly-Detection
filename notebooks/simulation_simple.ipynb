import sys
import os
import numpy as np
import matplotlib.pyplot as plt
from sklearn.metrics import confusion_matrix, accuracy_score, precision_score, recall_score, f1_score, ConfusionMatrixDisplay

# Add the parent directory to path so we can import src
sys.path.append(os.path.abspath(os.path.join('..')))

from src.elliptical import EllipticalAnomalyDetector

# Parameters [cite: 1110-1114]
x_center, y_center = 0, 0
a, b = 5, 3  # Major and Minor axis
num_normal = 1000
num_anom = 40

# 1. Generate Normal Points (Inside Ellipse) [cite: 1115-1126]
angles = np.random.uniform(0, 2 * np.pi, num_normal)
radii = np.sqrt(np.random.uniform(0, 1, num_normal)) # Sqrt for uniform distribution
x_norm = x_center + a * radii * np.cos(angles)
y_norm = y_center + b * radii * np.sin(angles)
X_normal = np.column_stack((x_norm, y_norm))

# 2. Generate Anomalies (Outside Ellipse) [cite: 1127-1132]
# Using multipliers > 1.0 to ensure they are outside
anom_angles = np.random.uniform(0, 2 * np.pi, num_anom)
anom_radii = np.random.uniform(1.1, 2.0, num_anom) 
x_anom = x_center + a * anom_radii * np.cos(anom_angles)
y_anom = y_center + b * anom_radii * np.sin(anom_angles)
X_anom = np.column_stack((x_anom, y_anom))

# Combine
X = np.vstack((X_normal, X_anom))
y_true = np.array([0]*num_normal + [1]*num_anom)

print(f"Data Generated: {len(X)} points")

# Initialize Simplified Algorithm [cite: 310]
model = EllipticalAnomalyDetector(mode='simplified')

# Fit on the dataset
model.fit(X)

# Predict
y_pred = model.predict(X)

# Plot Scatter
plt.figure(figsize=(10, 8))

# Plot Normal predictions
plt.scatter(X[y_pred==0, 0], X[y_pred==0, 1], c='blue', s=20, label='Predicted Normal')

# Plot Anomaly predictions
plt.scatter(X[y_pred==1, 0], X[y_pred==1, 1], c='red', s=40, label='Detected Anomalies')

# Draw the simplified bounding box/ellipse boundary for reference
theta = np.linspace(0, 2*np.pi, 100)
plt.plot(a*np.cos(theta), b*np.sin(theta), 'k--', alpha=0.5, label='True Ellipse')

plt.title("Simplified Anomaly Detection Algorithm (Axis-Aligned)")
plt.xlabel("X-axis")
plt.ylabel("Y-axis")
plt.legend()
plt.grid(True)
plt.axis('equal')
plt.show()

# Calculate Metrics
cm = confusion_matrix(y_true, y_pred)
acc = accuracy_score(y_true, y_pred)
prec = precision_score(y_true, y_pred)
rec = recall_score(y_true, y_pred)
f1 = f1_score(y_true, y_pred)

print(f"Accuracy:  {acc:.4f}")
print(f"Precision: {prec:.4f}")
print(f"Recall:    {rec:.4f}")
print(f"F1 Score:  {f1:.4f}")

# Plot Confusion Matrix
disp = ConfusionMatrixDisplay(confusion_matrix=cm, display_labels=['Normal', 'Anomaly'])
disp.plot(cmap='Blues')
plt.title("Confusion Matrix (Simplified)")
plt.show()

